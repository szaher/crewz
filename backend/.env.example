# Backend Environment Configuration Template
# Copy this file to .env and update with your values

# Application
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database - PostgreSQL
DATABASE_URL=postgresql://crewai:dev_password@localhost:5432/crewai_platform
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Database - MongoDB
MONGODB_URL=mongodb://crewai:dev_password@localhost:27017/
MONGODB_DATABASE=crewai_logs

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# Security - JWT
JWT_SECRET=your_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Security - Encryption (for credentials)
ENCRYPTION_KEY=your_encryption_key_here_32_bytes

# CORS
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Docker (for tool execution)
DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_TOOL_TIMEOUT=3600
DOCKER_TOOL_CPU_LIMIT=2
DOCKER_TOOL_MEMORY_LIMIT=4g

# LLM Providers (Optional - configure in UI)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# OLLAMA_BASE_URL=http://localhost:11434

# Observability
OTEL_ENABLED=false
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
PROMETHEUS_ENABLED=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# File Upload
MAX_UPLOAD_SIZE_MB=10

# Tenant Quotas (defaults)
DEFAULT_MAX_FLOWS=100
DEFAULT_MAX_EXECUTIONS_PER_DAY=1000
DEFAULT_MAX_STORAGE_GB=10
DEFAULT_MAX_LLM_TOKENS_PER_DAY=1000000
