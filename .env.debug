# Debug-friendly defaults for backend service

# Logging verbosity and format
LOG_LEVEL=DEBUG
LOG_FORMAT=pretty
LOG_HTTP=true
LOG_DEBUG_MODULES=sqlalchemy.engine,httpx

# SQLAlchemy echo (logs SQL statements)
SQL_ECHO=true

# Uvicorn log level
UVICORN_LOG_LEVEL=debug

# CORS for local dev
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000,http://frontend:3000
ALLOWED_ORIGIN_REGEX=^https?:\/\/(localhost|127\.0\.0\.1|frontend)(:[0-9]+)?$|^https?:\/\/(10\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}|192\.168\.[0-9]{1,3}\.[0-9]{1,3}|172\.(1[6-9]|2[0-9]|3[0-1])\.[0-9]{1,3}\.[0-9]{1,3})(:[0-9]+)?$

# Stable encryption key (base64 32 bytes) for local dev
# Do NOT use in production
ENCRYPTION_KEY=QUFBQUFBQUFBQUFBQUFBQUFBQUFBQUFBQUFBQUFBQUE=
