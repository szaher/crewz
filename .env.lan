# Set a LAN-safe CORS origin regex for the backend without editing docker-compose.yml
#
# Examples:
# Single host (any port):
# ALLOWED_ORIGIN_REGEX=^https?://192\.168\.1\.23(:[0-9]+)?$
#
# Whole 192.168.x.x subnet (any port):
# ALLOWED_ORIGIN_REGEX=^https?://192\.168\.[0-9]+\.[0-9]+(:[0-9]+)?$
#
# Whole RFC1918 ranges (10.x, 172.16â€“31.x, 192.168.x):
# ALLOWED_ORIGIN_REGEX=^https?://(10\.[0-9]+\.[0-9]+\.[0-9]+|192\.168\.[0-9]+\.[0-9]+|172\.(1[6-9]|2[0-9]|3[0-1])\.[0-9]+\.[0-9]+)(:[0-9]+)?$

# Uncomment and set one of the above:
# ALLOWED_ORIGIN_REGEX=^https?://192\.168\.1\.23(:[0-9]+)?$
